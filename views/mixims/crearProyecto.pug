mixin crearProyecto(proyecto ={})

    form.agregar-proyecto(action=`/nuevo-proyecto/${proyecto.id || ''}` method="POST")
        .campo 
            label(for="nombre") Nuevo Proyecto:
            input(value=proyecto.nombre  type="text" id="nombre" name="nombre" placeholder="Inserte nombre del proyecto")
        .campo.enviar 
            input(type="submit" value=`${proyecto.nombre? 'Actualizar':'Agregar'}` class="boton")